{% extends "_layouts/site" %}

{% block main %}

{% if entry.eventFeatured %}

<div class="grid-container">

  <div class="grid-x grid-padding-y">
    <div class="small-12 cell">
      <h5>{{ entry.eventDate | date('D j M') }}</h5>
      <h4>{{entry.title}} @ {{entry.eventVenue}}, {{entry.eventLocation}}</h4>
    </div>
  </div>
  
  <div class="grid-x grid-padding-x grid-padding-y small-up-2 medium-up-3 large-up-4 margin-bottom-2" id="gallery">
    {% for asset in entry.eventPhotos %}
    <div class="cell about__images" data-src="{{ asset.getUrl('gallery') }}">
      <a href="{{ asset.getUrl('gallery') }}"><img src="{{ asset.getUrl('thumb') }}" width="{{ asset.getWidth('thumb') }}" height="{{ asset.getHeight('thumb') }}" class="excerpt__image"></a>
    </div>
    {% endfor %}
  </div>

</div>

{% else %}

{% for asset in entry.eventFeatureImage %}
<img src="{{ asset.getUrl('xxlarge') }}">
{% endfor %}

<section class="event__entry inverted">
  <div class="grid-container">
    <div class="grid-x padding-top-3">
      
      <div class="small-12 medium-4 cell">
      <h5>{{ entry.eventDate | date('D j M') }}</h5>
      </div>
      
      <div class="small-12 medium-8 cell">
        <h2>{{entry.title}} @ {% if entry.eventVenue|length %}{{ entry.eventVenue }},{% endif %}<br>{{ entry.eventLocation}}</h2>
      </div>
    </div>
  </div>
</section>



{% set entries = craft.entries
.section('events')
.eventLocation('Manchester')
.order('eventDate asc')
.id('not ' ~ entry.id)
.all() %}

<div class="grid-x">
{% for entry in entries %}
<div class="small-12 cell">

<div class="featured">

  <a href="{{ entry.url}}">
    
    <div class="grid-x featured__title align-bottom">
      <div class="small-12 cell padding-3">
        <h5>{{ entry.eventDate|date('D j M') }}</h5>
        <h4 class="margin-bottom-0">{{ entry.title}} @</h4>
        <h4>{% if entry.eventVenue|length %}{{ entry.eventVenue }},{% endif %} {{ entry.eventLocation}}</h4>
      </div>
    </div>
    
    <div class="featured__image">
      {% for asset in entry.eventFeatureImage %}
      <img src="{{ asset.getUrl('xxlarge') }}">
      {% endfor %}
    </div>
  
  </a>
</div>
{% endfor %}
</div>

{% endif %}
{% endblock %}





                