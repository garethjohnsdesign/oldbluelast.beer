{% extends 'merch/_layouts/main' %}

{% block main %}
<div class="grid-x grid-padding-y grid-padding-x">
  <div class="small-12 cell">
      <a href="{{ url('merch/products') }}">&larr; All products</a>
  </div>
</div>

<div class="grid-container">
  <div class="grid-x">
      <div class="small-12 medium-6 cell">
        {% for image in product.image.all() %}
        <div class="image--square" data-interchange="{% include "_includes/images/full/1-1/interchange-img-small-12-medium-4" %}">
          <div class="grid-y height-100 align-center content">
            <div class="shrink cell text-center padding-2">
  
            </div>
          </div>
        </div>
        {% endfor %}
      </div>
      <div class="small-12 medium-6 cell">
          <h3>{{ product.title }}</h3>

          <form method="POST">
              <input type="hidden" name="action" value="commerce/cart/update-cart">
              {{ redirectInput('shop/cart') }}
              <input type="hidden" name="qty" value="1">
              {{ csrfInput() }}
              <div class="field">
                  <select name="purchasableId">
                      {% for purchasable in product.variants %}
                          <option {% if purchasable.stock <= 0 and purchasable.hasUnlimitedStock == false %}disabled {% endif %}
                                  value="{{ purchasable.id }}">{{ purchasable.sku }} {{ purchasable.description }} {{ purchasable.price|commerceCurrency(cart.currency) }}</option>
                      {% endfor %}
                  </select>
              </div>
              <div class="buttons">
                  <input type="submit" value="{{ "Add to cart"|t }}" class="button"/>
              </div>
          </form>
      </div>
  </div>
</div>
{% endblock %}
