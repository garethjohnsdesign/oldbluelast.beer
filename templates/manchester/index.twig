{% extends "_layouts/site" %}

{% block main %}

<div class="grid-x">
  <div class="small-12 cell">
  <div class="responsive-embed panorama">
    <video autoplay muted loop>
      <source src="assets/videos/manc.mp4" type="video/mp4">
      Your browser does not support the video tag.
    </video>  
  </div>
  </div>
</div>
          
{% set entries = craft.entries
.section('events')
.eventLocation('Manchester')
.order('eventDate asc')
.all() %}

<div class="grid-x">
{% for entry in entries %}
<div class="small-12 cell">

<div class="featured">

  
    
    <div class="grid-x featured__title align-middle">
      <div class="small-12 cell padding-3">
        <h2 class="text-uppercase">{{ entry.title}}</h2>
      </div>
    </div>
    
    <div class="grid-x featured__title align-bottom padding-3 text-uppercase">
    
      <div class="small-12 medium-6 large-2 cell">
        <h5>{{ entry.eventDate | date('D j M') }}</h5>
      </div>
      
      <div class="small-12 medium-6 large-4 cell">
        <h5>{% if entry.eventVenue|length %}@{{ entry.eventVenue }}{% endif %}</h5>
      </div>
      
      <div class="small-12 medium-6 large-2 cell">
      <h5><a href="{{ entry.eventLink}}" class="underline" target="_blank">Tickets</a></h5>
      </div>
      
      <div class="small-12 medium-6 large-2 cell">
      <h5><a href="{{ entry.eventLink}}" class="underline" target="_blank">Event Page</a></h5>
      </div>

    </div>
    
    <div class="featured__image">
      {% for asset in entry.eventFeatureImage %}
      <img src="{{ asset.getUrl('xxlarge') }}">
      {% endfor %}
    </div>
  
</div>
{% endfor %}
</div>


{% endblock %}