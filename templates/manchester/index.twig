{% extends "_layouts/site" %}

{% block main %}

<div class="grid-x">
  <div class="small-12 cell">
  <div class="responsive-embed panorama">
    <video autoplay muted loop>
      <source src="assets/videos/manc.mp4" type="video/mp4">
      <source src="movie.ogg" type="video/ogg">
      Your browser does not support the video tag.
    </video>  
  </div>
  </div>
</div>
          
{% set entries = craft.entries
.section('events')
.eventLocation('Manchester')
.order('eventDate asc')
.all() %}

<div class="grid-x">
{% for entry in entries %}
<div class="small-12 cell">

<div class="featured">

  <a href="{{ entry.url}}">
    
    <div class="grid-x featured__title align-bottom">
      <div class="small-12 cell padding-3">
        <h5>{{ entry.eventDate | date('D j M') }}</h5>
        <h4 class="margin-bottom-0">{{ entry.title}} @</h4>
        <h4>{% if entry.eventVenue|length %}{{ entry.eventVenue }},{% endif %} {{ entry.eventLocation}}</h4>
      </div>
    </div>
    
    <div class="featured__image">
      {% for asset in entry.eventFeatureImage %}
      <img src="{{ asset.getUrl('xxlarge') }}">
      {% endfor %}
    </div>
  
  </a>
</div>
{% endfor %}
</div>


{% endblock %}